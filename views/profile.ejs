<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>Profile&Comics</title>
  <script src="https://code.jquery.com/jquery-3.1.1.min.js" type="text/javascript"></script>
  <link rel="stylesheet" href="">
</head>
  <body>
    <h1><%= user.username %>'s Profile</h1>
    <a href="http://localhost:3000/main">
      <input type="button" value="Back to Main"/>
    </a>
    <form action="/auth?_method=DELETE" method="put">
      <input type="submit" value="Logout">
    </form>

    <h1>Saved Comics</h1>
    <% if(saved.length) { %>
      <% saved.forEach((x) => { %>
      <h1><%= x.title %></h1>
      <img src="<%= x.image %>">
      <p><%= x.notes %></p>
        <form action="/profile/<%= x._id %>?_method=DELETE" method="POST">
          <input type="submit" value="Delete">
        </form>
        <form action="/profile/<%= x._id %>?_method=PUT" method="POST">
          <input type="text" name="saved[notes]" value="<%= saved.notes %>">
          <input type="submit" value="Add Notes">
        </form>
      <% }); %>
    <% } %>
  </body>
</html>
