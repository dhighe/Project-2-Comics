<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>Profile&Comics</title>
  <script src="https://code.jquery.com/jquery-3.1.1.min.js" type="text/javascript"></script>
  <link href="https://fonts.googleapis.com/css?family=Hind+Guntur" rel="stylesheet">
  <link href="./css/profile.css" rel="stylesheet" type="text/css">
  </head>
  <body>
  <div class="profile">
    <h1 class="heading"><%= user.username %>'s Profile</h1>
    <a href="http://localhost:3000/main">
      <input class="button" type="button" value="Search"/>
    </a>
    <form action="/logout?_method=DELETE" method="post">
      <input class="button" type="submit" value="Logout">
    </form>
  </div>

    <h1>Saved Comics</h1>
    <div class="comicbook">
    <% if(saved.length) { %>
      <% saved.forEach((x) => { %>
      <h1 class="comic-title"><%= x.title %></h1>
      <img class="comic-pic" src="<%= x.thumbnail %>">
      <p comic="comic-notes"><%= x.notes %></p>
        <form action="/profile/<%= x._id %>?_method=PUT" method="POST">
          <input class="search" type="text" name="saved[notes]" value="<%= saved.notes %>">
          <input class="button" type="submit" value="Add Notes">
        </form>
        <form action="/profile/<%= x._id %>?_method=DELETE" method="POST">
          <input class="button" type="submit" value="Delete">
        </form>
      <% }); %>
    <% } %>
    </div>
  </body>
</html>
