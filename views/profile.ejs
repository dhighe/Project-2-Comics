<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>Profile&Comics</title>
  <script src="https://code.jquery.com/jquery-3.1.1.min.js" type="text/javascript"></script>
  <link rel="stylesheet" href="">
</head>
  <body>
    <a href="http://localhost:3000/main">
      <input type="button" value="Back to Main"/>
    </a>
    <a href="http://localhost:3000/">
      <input type="button" value="Log Out"/>
    </a>
    <form action="/profile" method="get">
      <input type="text" name="username" placeholder="Username">
      <input type="test" name="email" placeholder="example@example.com">
      <input type="submit" value="Update">
    </form>
    <form action="/" method="get">
      <input type="submit" value="Delete">
    </form>

    <h1>Saved Comics</h1>
    <% if (saved.length >= 2) { %>
      <% for (let i = 0; i < 5; i++) { %>
      <h1><%= saved[i].title %></h1>
      <img src="<%= saved[i].images[0].path %>.jpg" alt="">
      <p><%= saved[i].description %></p>
     <% }; %>
    <% }; %>
  </body>
</html>
